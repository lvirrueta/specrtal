{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ],
        "capitalized-comments": [
          "warn",
          "always"
        ],
        "eqeqeq":"warn",
        "no-console":"warn",
        "no-var":"warn",
        "eol-last":"warn",
        "indent":["warn",2],
        "key-spacing":"warn",
        "max-len":[
          "warn",
          {
            "code": 100,
            "ignoreComments": true
          }
        ],
        "no-dupe-else-if":"error",
        "no-undefined":"error",
        "semi":[
          "error",
          "always"
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {}
    }
  ]
}
